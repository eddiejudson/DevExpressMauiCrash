<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiCrash.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiCrash"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Expenses"
         Icon="document_scanner_white_24dp.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Submitted Expenses"
         Icon="upload_white_24dp.png">
            <ShellContent ContentTemplate="{DataTemplate local:OtherPage}" />
        </Tab>
        
    </TabBar>

</Shell>
